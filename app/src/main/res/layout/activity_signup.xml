<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp" app:srcCompat="@android:color/holo_red_light"
            tools:layout_editor_absoluteY="94dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageView"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView" android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            android:layout_marginTop="41dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:hint="Enter Your full Name"/>
</androidx.constraintlayout.widget.ConstraintLayout>